<%- include('../header') %>
<div class="container">
    <h1 class="text-center">Product Page</h1>
     <%//= x%>
     <%//= y%>
     <%//= z%>

     <% //z.forEach(function(val){ %>
        <li><%//= val%></li>
    <%//})%>

    <%=catData%>
    <form method="post" action="/admin/product-action" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Product Name</label>
          <input type="text" name="productName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product Price</label>
            <input type="text" name="productPrice" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product Discount</label>
            <input type="number" name="productDiscount" min="0" max="100" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Select Category</label>
            
            <select name="productCategoryId">
                <option value="">Please Select Category</option>
                <!-- catData : [{_id:'',catName:''},{},{}] -->
                <% catData.forEach(function(rec){ %>
                    <option value="<%= rec._id %>">
                        <%= rec.catName%>
                    </option>
                <% }) %>
            </select>
            
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Select Brand</label>
            <select name="productBrandId">
                <option value="">Please Select Brand</option>
                <% brData.forEach(function(answer){ %>
                    <option value="<%= answer._id%>">
                        <%= answer.brName%>
                    </option>
                <%})%>
            </select>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Select Image For Product</label>
            <input type="file" name="productImagePath" />
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product description</label>
            
            <textarea name="productDesc"></textarea>
            
        </div>



        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
<%- include('../footer') %>